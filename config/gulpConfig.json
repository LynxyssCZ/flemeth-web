{
  "dstDir": "./dist/client/",
  "browserify": {
    "minify": true,
    "mangle": false,
    "makeMaps": true,
    "chunks": {
      "app": "./src/client/js/index.js",
      "vendor": ["classnames", "object-assign", "url", "immutable", "react", "react-router", "bluebird", "moment"]
    },
    "externals": {
      "react": "React"
    },
    "commonChunks": ["vendor"]
  },
  "bower": {
    "copiedDirs": [
      "js",
      "css",
      "fonts"
    ],
    "fileTypes": {
      ".js": "js",
      ".css": "css"
    },
    "copyMaps": true
  },
  "assets": {
    "componentsDir": "./bower_components",
    "rootDir": "./src/client",
    "partials": {
      "src": "html",
      "dst": "html",
      "extension": "html"
    },
    "images": {
      "src": "img",
      "dst": "img",
      "extension": "*"
    }
  }
}
